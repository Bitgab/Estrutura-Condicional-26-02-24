programa {
  funcao inicio() {  

    //Declaração de variável
    inteiro diaDaSemana

    //Solicitação de dados.
    escreva("Digite um número para o dia da semana: ")
    leia(diaDaSemana)

    // Switch - Case
    escolha(diaDaSemana){ 
    
    caso 2:
    caso 3:
    caso 4:
    caso 5:
    caso 6:
    escreva("Dia útil")
    pare

    caso 1:
    caso 7:
    escreva("Final de semana")
    pare

    caso contrario :
    escreva("Opção inválida.")

  }
  }
}
